{% extends 'base.html.twig' %}

{% block body %}

    <div class="container-mt-3" style="min-width: 400px">

        <h3 class="h3 card-title mb-3 font-weight-normal">Profil žáka</h3>

        <hr>

        <div class="d-flex justify-content-center">

            {% if zak.image != NULL %}

                <img src="{{ '/uploads/' ~ zak.image }}" alt="Profilový obrázek"
                     style="max-width: 200px; max-height: 300px; margin-right: 20px">

            {% endif %}


            <div id="InfoBox">

                <h4 class="h4 card-title mb-3 font-weight-normal">{{ zak.jmeno }} {{ zak.prijmeni }}</h4>

                <br>

                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Ve třídě: {{ zak.trida }}</li>
                    <li class="list-group-item">Kmenová učebna: {{ zak.trida.ucebna }}</li>
                    <li class="list-group-item">Telefon Rodičů: {{ zak.tel }}</li>
                </ul>


            </div>
        </div>

        <br>

        <div class="d-flex justify-content-center">
            <div id="Textbox" style="max-width: 400px; margin-top: 30px">
                <h5 class ="h5 card-title mb-0 font-weight-normal float-left">Dodatečné informace: </h5>
                <br>
                <hr>
                <article class="text-justify">{{ zak.poznamka }}</article>
            </div>
        </div>

        <hr>

        {% if is_granted('ROLE_ADMIN') %}
        <div class="btn-group">
            <a href="{{ path('zak.edit', {id: zak.id}) }}" class="btn btn-outline-primary btn-group">Upravit</a>
            <a href="{{ path('zak.delete', {id: zak.id}) }}" class="btn btn-outline-danger btn-group">Smazat</a>
        </div>
        {% endif %}

        {% if is_granted('ROLE_TEACHER') %}

            <a href="{{ path('zak.edit', {id: zak.id}) }}" class="btn btn-outline-primary btn-group">Upravit</a>

        {% endif %}

    </div>

{% endblock %}

{% block title %}
Profil žáka
{% endblock %}

